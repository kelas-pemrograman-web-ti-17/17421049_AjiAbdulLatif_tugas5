aside.main-sidebar
    // sidebar: style can be found in sidebar.less
    section.sidebar
        // Sidebar user panel
        .user-panel
            .pull-left.image
                img.img-circle(src='adminlte/dist/img/user2-160x160.jpg' alt='User Image')
            .pull-left.info
                p Alexander Pierce
                a(href='#')
                    i.fa.fa-circle.text-success
                    |  Online
        // search form
        form.sidebar-form(action='#' method='get')
            .input-group
                input.form-control(type='text' name='q' placeholder='Search...')
                span.input-group-btn
                    button#search-btn.btn.btn-flat(type='submit' name='search')
                        i.fa.fa-search
        // /.search form
        // sidebar menu: : style can be found in sidebar.less
        ul.sidebar-menu(data-widget='tree')
            li.header MAIN NAVIGATION
            li.active.treeview
                a(href='#')
                    i.fa.fa-dashboard
                    span Dashboard

            li.treeview
                a(href='#')
                    i.fa.fa-laptop
                    span Data Mahasiswa
                    span.pull-right-container
                        span.label.label-primary.pull-right 4
                ul.treeview-menu
                    li
                        a(href='pages/layout/top-nav.html')
                            i.fa.fa-circle-o
                            |  Input nama
                    li
                        a(href='pages/layout/boxed.html')
                            i.fa.fa-circle-o
                            |  Data Mahasiswa
                    li
                        a(href='pages/layout/fixed.html')
                            i.fa.fa-circle-o
                            |  Edit data mahasiswa
                    li
                        a(href='pages/layout/collapsed-sidebar.html')
                            i.fa.fa-circle-o
                            | Lihat data
